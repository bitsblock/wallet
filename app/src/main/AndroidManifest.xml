<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bitsblock.wallet" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.bitsblock.wallet.activity.LoginActivity"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bitsblock.wallet.activity.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.bitsblock.wallet.activity.SendActivity"
            android:label="@string/title_activity_send"
            android:windowSoftInputMode="adjustResize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bitsblock.wallet.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.bitsblock.wallet.activity.SendToContactFromListActivity"
            android:label="@string/title_activity_send_to_contact"
            android:parentActivityName="com.bitsblock.wallet.activity.SendActivity"
            android:windowSoftInputMode="adjustResize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bitsblock.wallet.activity.SendActivity" />
        </activity>
        <activity
            android:name="com.bitsblock.wallet.activity.ReceiveActivity"
            android:label="@string/title_activity_receive"
            android:parentActivityName="com.bitsblock.wallet.activity.MainActivity"
            android:windowSoftInputMode="adjustResize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bitsblock.wallet.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.bitsblock.wallet.activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.Settings" >
        </activity>
        <activity
            android:name="com.bitsblock.wallet.activity.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
    </application>

</manifest>
